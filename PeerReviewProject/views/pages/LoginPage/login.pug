// Button to click to show the modal
.text-center
  a.btn.btn-info(href='#myModal' data-toggle='modal' onclick='openModal()') Click Here to Login
br
.text-center
  h4.modal-title Need to create an account?
  a.dropdown-item(href='../LoginPage/signup') Register Here
// Modal HTML
#myModal.modal.fade
  .modal-dialog.modal-login
    .modal-content
      .modal-header
        .avatar
          img(src='https://imgur.com/y44K594.png' alt='Avatar' style="width:500px;height:160px;")
        h4.modal-title Login Page
        button.close(type='button' data-dismiss='modal' aria-hidden='true') &times;
      .modal-body
//to access from database
      form(action="LoginPage/login", method="post")
        .form-group
          input.form-control(type='text' name='email' placeholder='CU Email Address' required='required')
        .form-group
          input#psw.form-control(type='password' name='password' placeholder='Password' required='required')
        .form-group
          button#my_submit_button.btn.btn-primary.btn-block.login-btn(disabled='' onclick='onClickFunction()') Login
